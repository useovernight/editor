{
  "private": true,
  "name": "@useovernight/rich-text",
  "version": "0.0.0",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"tsc-alias --watch\"",
    "build": "tsc --build && tsc-alias"
  },
  "exports": {
    "./components/*": "./dist/components/*.js",
    "./constants/*": "./dist/constants/*.js",
    "./contexts/*": "./dist/contexts/*.js",
    "./enums/*": "./dist/enums/*.js",
    "./hooks/*": "./dist/hooks/*.js",
    "./types/*": "./dist/types/*.js",
    "./cursor": "./dist/cursor.js",
    "./selection": "./dist/selection.js",
    "./token": "./dist/token.js"
  },
  "dependencies": {
    "react": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@useovernight/typescript-config": "*",
    "concurrently": "^8.2.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5"
  }
