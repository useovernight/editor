{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    // Emit
    "noEmit": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // JavaScript Support
    "allowJs": false,

    // Editor Support
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Language and Environment
    "jsx": "preserve"
  }
}
